<div class="container">
  <h1 class="title">PETS</h1>
  <h2>Spend some time with one of these cuties</h2>


  <div class="d-flex row">
      <% @pets.each do |pet| %>
      <div class="col-4">
        <%= link_to pet_path(pet), style: "text-decoration: none; color: inherit;" do %>
          <div class="card-product">
            <img src="<%= pet.picture_url %>" alt="Petpic" width="300px">
              <div class="card-product-infos">
                <h2 class= "pet-name"><%= pet.pet_name %></h2>
                <p><%= pet.pet_details %></p>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
  </div>
<p class="add-pet-button"><%= link_to "Add a Pet", new_pet_path(@pet), class: "btn btn-secondary" %></p>
  <div style="width: 100%; height: 600px;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>
